<%- include("../partials/header") %>

<div class = "container afternav">
    <div style="width: 50%; margin: 25px auto;"></div>
    <form action="/blogposts/<%=blogpost._id%>/?_method=PUT" method="POST">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
        <div class="form-group">
            <label>Edit A Post</label>
            <textarea class = "form-control" rows="5" col = "35" maxlength = "1000" name = "blogpost[content]"><%= blogpost.content %></textarea>
        </div>
        
        <div>
            <button class="btn btn-xs btn-primary pull-right">Submit</button>
        </div>
    </form>
    </div>
</div>


